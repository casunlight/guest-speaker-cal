<h2>Speakers</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Lecture title</th>
    <th>Lecture description</th>
    <th>Day</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @speakers.each do |speaker| %>
  <tr>
    <td><%= speaker.full_name %></td>
    <td><%= speaker.lecture_title %></td>
    <td><%= speaker.lecture_description %></td>
    <td><a href="/days/<%= speaker.day_id %>"><%= speaker.day_id %></a></td>
    <td><%= link_to 'Show', speaker %></td>
    <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
    <td><%= link_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

